<launch>
 
  <!-- Enable visualization in rviz, joint_state_publisher and robot_state_publisher, and robot_description -->
  <!-- Enable feedback from dynamic simulator for the robot state publisher -->
  <rosparam param="source_list">[/forth_hand/joint_states]</rosparam>
  <remap from="/joint_states" to="/forth_hand/joint_states"/>
  <!-- and publish a value for the synergy joint/invisible wire link to avoid the error in the RobotDiplay Rviz -->
  <node name="wire_transform" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 1 /hand_palm_link /invisible_wire_link 1"/>
  <include file="$(find forth_hand_description)/launch/display.launch">
    <arg name="gui" value="False" />
    <arg name="robot_name" value="forth_hand_full_actuation"/>
    <arg name="use_rviz" value="True"/>
    <arg name="use_joint_state_publisher" value="False"/>
    <arg name="use_mimic_tag" value="false"/> <!-- for now true -->
  </include>

  <!-- arg name="init_pose" default="-x 0 -y 0 -z 0 -R 0 -P 0 -Y 0" /-->

  <!-- Spawn a robot into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model forth_hand" respawn="false" output="screen" />

<!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find forth_hand_description)/worlds/simple_environment.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <include file="$(find forth_hand_ros_control)/launch/forth_hand_full_control.launch"/>

</launch>